<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Test Numbers</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="/style.css">
	<link rel="stylesheet" href="/style-mobile.css">
	<script src="/script.js" defer></script>
</head>

<body>
	<div class="main">
		<div class="search">
			<input type="text" class="search-input" placeholder="What are you looking for?">
			<button class="searchButton">
				<i class="fa fa-search"></i>
			</button>
		</div>

		<div class="result">
			<!-- 7 element -->
			<a>
				<div class="result-child">

				</div>
			</a>
			<a>
				<div class="result-child">

				</div>
			</a>
			<a>
				<div class="result-child">

				</div>
			</a>
			<a>
				<div class="result-child">

				</div>
			</a>
			<a>
				<div class="result-child">

				</div>
			</a>
			<a>
				<div class="result-child">

				</div>
			</a>
			<a>
				<div class="result-child">

				</div>
			</a>
		</div>

		


	</div>

	<div class="new-bottom">
		<table class="content-table">
			<thead>
				<tr>
					<th>ID</th>
					<th>B number</th>
					<th>A number</th>
					<th>Description</th>
					<th>Audio</th>
				</tr>
			</thead>
			<tbody>
				
				<% 
					// data is coming from index.js as array of objects, each containing info about phone number
					// let bnumbers = data.bnumbers; 
					// let anumbers = data.anumbers; 
					
				%>
				<% for(let i = 0; i<data.length; i++) { %>
					<tr>
						<td>
							<%=i+1 %>
						</td>
						<td>
							<%= data[i].number %>
						</td>
						<td>
							<%= data[i].ani %>
						</td>
						<td>
							<%= data[i].description %>
						</td>
						<td>
							<audio controls>
								<source src="audios/<%=data[i].number %>.mp3" type="audio/mpeg">
							</audio>
						</td>
					</tr>
				<% } %>

			</tbody>
		</table>
	</div>

</body>

</html>